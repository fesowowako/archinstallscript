[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
third = ${xrdb:color4:#222}
fourth = ${xrdb:color6:#222}
fifth = ${xrdb:color7:#222}

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 35
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 1 
padding-right = 1

module-margin-left = 1
module-margin-right = 2

font-0 = "JetBrainsMono Nerd Font:pixelsize=10;1"

modules-left = bspwm 
modules-right = xkeyboard memory cpu date 

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "Keyboard "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.primary}
label-occupied-padding = 2

label-empty = %index%
label-empty-padding = 2

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU"
format-underline = ${colors.fourth}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-underline = ${colors.third}
label = %percentage_used%%


[module/date]
type = internal/date
interval = 5

date = ""
date-alt = "%Y-%m-%d "

time = %H:%M
time-alt = %H:%M:%S

format-prefix = ""
format-underline = ${colors.fifth} 

label = %date%%time%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
